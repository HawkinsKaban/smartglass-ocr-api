# Security settings
SECRET_KEY=change-this-to-a-secure-random-key

# Storage settings
UPLOAD_FOLDER=data/uploads
MARKDOWN_FOLDER=data/markdown

# Server settings
DEBUG=true
PORT=5000

# OCR settings
OCR_TIMEOUT=360
DEFAULT_LANGUAGE=eng+ind
DEFAULT_SUMMARY_LENGTH=200
DEFAULT_SUMMARY_STYLE=concise

# ID Card specific settings
ID_CARD_RESIZE_WIDTH=1000
ID_CARD_TIMEOUT=300
ID_CARD_USE_TESSERACT_ONLY=true

MAX_IMAGE_DIMENSION=3000
# Tesseract path settings - change these based on your installation
# Windows example: TESSERACT_PATH=C:\\Program Files\\Tesseract-OCR\\tesseract.exe
# Linux example: TESSERACT_PATH=/usr/bin/tesseract
# macOS example: TESSERACT_PATH=/usr/local/bin/tesseract
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe

# Tesseract data path - usually not needed unless custom
# Windows example: TESSERACT_DATA_PATH=C:\\Program Files\\Tesseract-OCR\\tessdata
# Linux example: TESSERACT_DATA_PATH=/usr/share/tesseract-ocr/4.00/tessdata
# macOS example: TESSERACT_DATA_PATH=/usr/local/share/tessdata
TESSERACT_DATA_PATH=

# Performance settings
LIGHTWEIGHT_MODE=true

